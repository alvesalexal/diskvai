<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity"
    android:background="#fff"
    android:orientation="vertical">

    <!-- Logotipo -->
    <ImageView
        android:id="@+id/avatar"
        android:layout_gravity="center_horizontal"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:src="@mipmap/logo"
        android:layout_weight="1"
        />

    <!-- Campo Login -->
    <EditText
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:hint="Login"
        android:background="@drawable/rounded_corner_line"
        android:paddingLeft="20dp"
        android:inputType="textEmailAddress"
	    android:maxLines="1"
        android:id="@+id/usuario"
        android:paddingRight="10dp"
        />

    <!-- Campo Senha -->
    <EditText
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_corner_line"
        android:hint="Senha"
        android:paddingLeft="20dp"
        android:inputType="textPassword"
	    android:maxLines="1"
        android:id="@+id/senha"
        android:paddingRight="10dp"
        />

    <!-- Botão de Login-->
    <Button
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_filled"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#fff"
        android:text="Login"
        android:id="@+id/login"
        android:onClick="botaoLogar"
        />


    <TextView
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Ou entre com" />

    <!-- Login Alternativo -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <!-- Entrar com o Facebook -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.facebook.login.widget.LoginButton
                android:layout_marginTop="20dp"
                android:id="@+id/login_fb"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                />
            <ImageButton
                android:layout_margin="10dp"
                android:src="@drawable/ic_facebook_f_filled"
                android:background="@drawable/fb_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="fbButton"
                android:elevation="5dp"/>
        </FrameLayout>

        <!-- Entrar com o Google -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.gms.common.SignInButton
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:onClick="LoginGoogle"
                android:id="@+id/signInButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:layout_margin="10dp"
                android:src="@drawable/ic_google__g__logo"
                android:background="@drawable/google_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="googleButton"
                android:elevation="5dp"/>
        </FrameLayout>
    </LinearLayout>


    <!-- Cadastrar -->
    <TextView
        android:layout_gravity="center_horizontal"
        android:gravity="bottom"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não tem uma Conta? "
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/cadastrar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Cadastre-se"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:onClick="Cadastro"/>



</LinearLayout>

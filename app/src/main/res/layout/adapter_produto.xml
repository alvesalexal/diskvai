<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp">
        <View
            android:layout_width="3dp"
            android:layout_height="90dp"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/imgProduto"
            android:background="#a1a1a1"
            android:src="@mipmap/perfil_empresa"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="90dp" />


    </LinearLayout>



    <LinearLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id: 00"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/nome"
                android:textColor="#0c3556"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome: example"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descricao: lorem ipsum..."/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/preco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="PreÃ§o: R$ 00,00"
                android:layout_marginRight="10dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:backgroundTint="#fff"
            android:src="@drawable/ic_icons8_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />
        <ImageButton
            android:backgroundTint="#fff"
            android:src="@drawable/ic_icons8_trash"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />

    </LinearLayout>


</LinearLayout>
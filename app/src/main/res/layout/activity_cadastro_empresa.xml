<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroEmpresa"
    android:background="#fff"
    android:orientation="vertical">


    <!-- Botão Voltar -->
    <Button
        android:id="@+id/voltar"
        android:layout_margin="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_back_button"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="back"
        />

    <!-- Logotipo -->
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@mipmap/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        />

    <!-- Texto Crie sua Conta! -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crie sua Conta"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:layout_marginBottom="20dp"/>
            <!-- Campo Nome-->
            <EditText
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_corner_line"
                android:hint="Nome"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:id="@+id/Nome"
                android:paddingRight="10dp"
                />

            <!-- Campo Email -->
            <AutoCompleteTextView
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_corner_line"
                android:hint="Email"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:id="@+id/EndEmail"
                android:paddingRight="10dp"
                />

            <EditText
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_corner_line"
                android:hint="Login"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"
                android:maxLines="1"
                android:id="@+id/Login"
                android:paddingRight="10dp"
                />

            <!-- Campo Telefone -->
            <EditText
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_corner_line"
                android:hint="Telefone (opcional)"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"
                android:inputType="phone"
                android:maxLines="1"
                android:id="@+id/telefone"
                android:paddingRight="10dp"
                />

            <!-- Campo CNPJ -->
            <EditText
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_corner_line"
                android:hint="CNPJ"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"
                android:inputType="number"
                android:maxLines="1"
                android:id="@+id/cnpj"
                android:paddingRight="10dp"
                />

            <!-- Campo Senha -->
            <EditText
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_corner_line"
                android:hint="Senha"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"
                android:maxLines="1"
                android:id="@+id/senha"
                android:inputType="textPassword"
                android:paddingRight="10dp"
                />

            <!-- Campo Confirmar Senha -->
            <EditText
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_corner_line"
                android:hint="Confirmar Senha"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"
                android:maxLines="1"
                android:id="@+id/confirmaSenha"
                android:inputType="textPassword"
                android:paddingRight="10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <com.rey.material.widget.CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Li e aceito os termos da "
                    android:checked="false"
                    android:gravity="center_vertical"
                    app:cbd_strokeColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Política de Privacidade"
                    android:textColor="@color/colorPrimary"
                    android:onClick="verPoliticaPrivacidade"/>

            </LinearLayout>

            <!-- Botão Cadastrar -->
            <Button
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_filled"
                android:backgroundTint="@color/colorPrimary"
                android:text="Cadastrar"
                android:textColor="#fff"
                android:paddingHorizontal="20dp"
                android:layout_gravity="center"
                android:id="@+id/cadastrar"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>